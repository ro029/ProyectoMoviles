<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eteSugerencias"
        android:src="@drawable/promocioneslogo"
        android:layout_alignParentTop="true"
        android:paddingBottom="20dp"
        android:paddingTop="30dp"/>
    <EditText
        android:id="@+id/eteSugerencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su sugerencia"
        android:inputType="textMultiLine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnSugerencia"/>


    <Button
        android:id="@+id/btnSugerencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:text="ENVIAR"
        android:layout_centerInParent="true"
        android:textColor="#FFFF"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSugerencia"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:text="Cualquier sugerencia será bien recibida por nosotros. Gracias por su tiempo, será bien recompensado."
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="20dp"/>
</RelativeLayout>